<section>
  <div class="main__card card">
    <div class="main__card__header card-header">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1em"
        height="1em"
        preserveAspectRatio="xMidYMid meet"
        viewBox="0 0 24 24"
      ><path
          fill="currentColor"
          d="M12 1a5 5 0 0 0-5 5v2H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V10a2 2 0 0 0-2-2h-1V6a5 5 0 0 0-5-5m0 1.9c1.71 0 3.1 1.39 3.1 3.1v2H8.9V6c0-1.71 1.39-3.1 3.1-3.1m.19 7.6c.94 0 1.69.21 2.23.62c.54.42.81.98.81 1.68c0 .44-.15.83-.44 1.2c-.29.36-.67.64-1.13.85c-.26.15-.43.3-.52.47c-.09.18-.14.4-.14.68h-2c0-.5.1-.84.29-1.08c.21-.24.55-.52 1.07-.84c.26-.14.47-.32.64-.54c.14-.21.22-.46.22-.74c0-.3-.09-.52-.27-.69c-.18-.18-.45-.26-.76-.26c-.27 0-.49.07-.69.21c-.16.14-.26.35-.26.63H9.27c-.05-.69.23-1.29.78-1.65c.54-.36 1.25-.54 2.14-.54M11 17h2v2h-2v-2Z"
        ></path></svg>
      <h5 class="mb-0">Recuperar cuenta</h5>
    </div>
    <div class="main__card__body card-body">
      <form method="POST" class="main__card__body__form" action="/forgot-password/{{#if findUser}}find-user{{/if}}{{#if confirmCode}}confirm-code{{/if}}{{#if resetPass}}reset-password{{/if}}">
        <input name="_csrf" value="{{csrfToken}}" type="hidden" />
        <div class="form-group mb-2">
          {{#if findUser}}
            <label for="username">nombre de usuario:</label>
            <input
              class="form-control form-control-sm required-field"
              type="text"
              id="username"
              name="username"
              autofocus
            />
          {{/if}}
          {{#if confirmCode}}
            <label for="code">Ingresa el código de confirmación:</label>
            <input
              class="form-control form-control-sm required-field"
              type="text"
              id="code"
              name="code"
              autofocus
            />
          {{/if}}
          {{#if resetPass}}
            <div class="form-group mb-2">
              <label for="password">nueva contraseña:</label>
              <input
                class="form-control form-control-sm required-field"
                type="password"
                id="password"
                name="password"
              />
            </div>
            <div class="form-group mb-2">
              <label for="confirmPassword">confirmar nueva contraseña:</label>
              <input
                class="form-control form-control-sm required-field"
                type="password"
                id="confirmPassword"
                name="confirmPassword"
              />
            </div>
          {{/if}}
        </div>
        <div class="main__card__body__form__buttons">
          <a href="/" class="btn btn-warning management-button">
            Volver al login
          </a>
          <button
            type="button"
            class="btn btn-danger management-button ms-1"
            id="{{#if resetPass}}btn-reset{{else}}btn-save{{/if}}"
          >
            {{#if findUser}}Encontrar cuenta{{/if}}
            {{#if confirmCode}}Comprobar código{{/if}}
            {{#if resetPass}}Cambiar contraseña{{/if}}
          </button>
        </div>
      </form>
    </div>
  </div>
</section>